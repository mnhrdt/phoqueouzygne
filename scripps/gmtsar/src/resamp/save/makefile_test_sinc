PROG =  test_sinc
CSRCS = test_sinc.c \
	sinc_one.c \
	sinc_kernel.c

NETCDF = $(NETCDFHOME)/lib
GMTLIB = $(GMTHOME)/lib
FSRCS = 
FC = gfortran
CC = gcc

OBJS =  $(CSRCS:.c=.o) $(FSRCS:.f=.o)	

INC = ../../include

CLIBS = -L../../lib/$(OS) -lgmtsar -lm
FLIBS =
CFLAGS = -Bstatic $(M64)
FFLAGS = -Bstatic $(M64)

$(PROG): $(OBJS)
	$(LINK.c) -o $@ $(OBJS) $(CLIBS) $(FLIBS) $(GMTLIB)/libgmt.a $(NETCDF)/libnetcdf.a

.c.o:
	$(CC) $(CFLAGS) -c $*.c -o $*.o -I$(INC)

clean:
	-rm -f $(OBJS) tags core

install:
	mv $(PROG) ../../bin/$(OS)
